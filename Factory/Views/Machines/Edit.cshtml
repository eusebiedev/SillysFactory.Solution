@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Edit this machine: @Html.DisplayFor(model => model.Name)</h4>
<div class="col">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "form-label"}})
    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control"}})
    <br>
    @Html.LabelFor(model => model.Engineer)<br>
    @Html.DropDownList("EngineerId")
    <br><br>
    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
  }

  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>