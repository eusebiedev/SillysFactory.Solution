@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Edit this machine: @Html.DisplayFor(model => model.Name)</h4>
<div class="col">
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "form-label"}})
    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control"}})
    <br>
    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
  }
  <br>
  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>